<?xml version="1.0" encoding="utf-8" ?>
<configuration>
 <Appenders>
     <Console name = "Console" target="SYSTEM_OUT">
         <PatternLayout pattern = "%d{yyyy-MM-dd HH:mm:ss} [%t] %-10level %-70c - %msg %n"/>
     </Console>

     <File name="File" fileName="ajay1.log">
         <PatternLayout pattern = "%d [%t] %-10level %-70c - %msg %n"/>
     </File>
 </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref = "Console" />
            <AppenderRef ref = "File" />
        </Root>
    </Loggers>

</configuration>